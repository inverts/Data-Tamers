<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- Register Widgets and the View Resolver used to display them (if you don't know use the JstlView) 
	 note that the id is the name of the view you will be calling in the controller. -->

	<!-- Hypothetical Future -->
	<bean id="DataForecast" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/widgets/data-forecast.jsp" />
	</bean>
	
	<!-- Revenue Sources -->
	 <bean id="RevenueSources" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value = "/WEB-INF/views/widgets/key-contributing-factors.jsp"/>
	</bean> 
	
	<!-- Website Performance -->
	<bean id="WebsitePerformance" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value = "/WEB-INF/views/widgets/website-performance.jsp"/>
	</bean>
	
	<!-- Keyword Insight -->
	<bean id="KeywordInsight" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value = "/WEB-INF/views/widgets/keyword-insight.jsp"/>
	</bean>

	<!-- INCLUDES -->
	<bean id="settings" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/includes/settings.jsp" />
	</bean>
	
	<bean id="addDashboard" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/includes/add-dashboard.jsp" />
	</bean>

	<!-- Key Contributing Factors -->
	<bean id="KeyContributingFactors" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value = "/WEB-INF/views/widgets/key-contributing-factors.jsp"/>
	</bean>

</beans>   