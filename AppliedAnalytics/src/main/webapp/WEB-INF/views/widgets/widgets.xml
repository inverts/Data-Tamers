<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- Register Widgets and the View Resolver used to display them (if you don't know use the JstlView) 
	 note that the id is the name of the view you will be calling in the controller. -->

<!-- Hypothetical Future -->
<bean id="HypotheticalFuture" class="org.springframework.web.servlet.view.JstlView">
	<property name="url" value="/WEB-INF/views/widgets/hypothetical-future.jsp" />
</bean>

<bean id="settings" class="org.springframework.web.servlet.view.JstlView">
	<property name="url" value="/WEB-INF/views/includes/settings.jsp" />
</bean>

</beans>