<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

<!-- Register Widgets and the View Resolver used to display them (if you don't know use the JstlView) 
	 note that the id is the name of the view you will be calling in the controller. -->
	 
	<!-- Settings --> 
	<bean id="settings" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/includes/settings.jsp" />
	</bean>
	
	<!-- Add Dashboard -->
	<bean id="addDashboard" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/includes/add-dashboard.jsp" />
	</bean>

	<!-- Serialize -->
	<bean id="serialize" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/includes/serialize.jsp" />
	</bean>
	
	<!-- Plaintext -->
	<bean id="plaintext" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/includes/plaintext.jsp" />
	</bean>
	
	<!--  Widget -->
	<bean id="widget" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/widgets/widget.jsp" />
	</bean>
	
	<!--  Widget Prototype -->
	<bean id="widgetPrototype" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/views/widgets/widget-proto.jsp" />
	</bean>

</beans>   
